{
  "name": "demoblaze-test",
  "version": "1.0.0",
  "description": "WebdriverIO automated testing project for demoblaze.com",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "wdio run ./wdio.conf.mjs",
    "test:local": "wdio run ./wdio.conf.mjs",
    "test:chrome": "wdio run ./wdio.conf.mjs --spec test/specs/**/*.js",
    "allure:generate": "allure generate allure-results --clean",
    "allure:open": "allure open allure-report",
    "allure:report": "npm run allure:generate && npm run allure:open",
    "test:allure": "npm test && npm run allure:report"
  },
  "keywords": [
    "webdriverio",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@wdio/allure-reporter": "^9.20.0",
    "@wdio/cli": "^8.40.6",
    "@wdio/local-runner": "^8.40.6",
    "@wdio/mocha-framework": "^8.40.3",
    "@wdio/spec-reporter": "^8.40.3",
    "allure-commandline": "^2.34.1",
    "chai": "^6.2.0",
    "chromedriver": "^142.0.1",
    "wdio-chromedriver-service": "^8.1.1"
  }
}
